<h1>Listing days</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Startdate</th>
    <th>Plan</th>
    <th>Week</th>
    <th>Month</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @days.each do |day| %>
  <tr>
    <td><%= day.name %></td>
    <td><%= day.type %></td>
    <td><%= day.startdate %></td>
    <td><%= day.plan_id %></td>
    <td><%= day.week_id %></td>
    <td><%= day.month_id %></td>
    <td><%= link_to 'Show', day %></td>
    <td><%= link_to 'Edit', edit_day_path(day) %></td>
    <td><%= link_to 'Destroy', day, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

